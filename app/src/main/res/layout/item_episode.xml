<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_item_character"
    android:layout_marginHorizontal="12dp"
    android:elevation="12dp"
    android:layout_marginTop="12dp"
    android:layout_height="wrap_content">


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/item_tv_episode_name"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:text="Name"/>

    <TextView
        android:id="@+id/item_episode_tv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_tv_episode_name"
        android:layout_marginTop="5dp"
        android:text="air_date"
        app:layout_constraintStart_toStartOf="@id/item_tv_episode_name"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/item_location_tv_dimension"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_episode_tv_type"
        android:layout_marginTop="5dp"
        android:text="episode"
        app:layout_constraintStart_toStartOf="@id/item_episode_tv_type"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:padding="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>